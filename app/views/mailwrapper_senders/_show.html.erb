<div id="mailwrapper_sender_settings">
<fieldset>
<legend><%= l(:field_sender) %></legend>
<% if @project.mailwrapper_sender.nil? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
  <p><%= link_to_if_authorized l(:label_mailwrapper_sender_new), {:controller => 'mailwrapper_senders', :action => 'add', :project_id => @project} %></p>
<% else %>
<table class="list">
  <thead>
    <tr>
      <th><%= l(:field_sender) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr class="issue <%= cycle 'odd', 'even' %>">
      <td><%= h(@project.mailwrapper_sender.sender) %></td>
      <td align="center" style="width:5%;">
        <%= link_to_if_authorized l(:button_update),
                    { :controller => :mailwrapper_senders, :action => 'mod', :project_id => @project, :sender_id => @project.mailwrapper_sender.id },
                    :class => "icon icon-edit" %>
        <%= link_to_if_authorized l(:button_delete),
                    { :controller => :mailwrapper_senders, :action => 'del', :project_id => @project, :sender_id => @project.mailwrapper_sender.id },
                    :method => :post,
                    :confirm => l(:text_are_you_sure),
                    :class => "icon icon-del" %>
      </td>
    </tr>
  </tbody>
</table>
<% end %>
</fieldset>
</div>

