<div id="mailwrapper_recipient_settings">
<fieldset>
<legend><%= l(:field_recipient) %></legend>
<% if @recipients.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
<table class="list">
  <thead>
    <tr>
      <th><%= l(:field_name) %></th>
      <th><%= l(:field_recipient) %></th>
	  <th></th>
    </tr>
  </thead>
  <tbody>
    <% @recipients.each do |r| -%>
    <tr class="issue <%= cycle 'odd', 'even' %>">
      <td><%= h(r.name) %></td>
      <td><%= h(r.recipient) %></td>
      <td align="center" style="width:5%;">
        <%= link_to_if_authorized l(:button_update),
                    { :controller => :mailwrapper_settings, :action => 'mod_recipient', :project_id => @project, :recipient_id => r.id },
                    :class => "icon icon-edit" %>
        <%= link_to_if_authorized l(:button_delete),
                    { :controller => :mailwrapper_settings, :action => 'del_recipient', :project_id => @project, :recipient_id => r.id },
                    :method => :post,
                    :confirm => l(:text_are_you_sure),
                    :class => "icon icon-del" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<p><%= link_to_if_authorized l(:label_mailwrapper_recipient_new), {:controller => 'mailwrapper_settings', :action => 'add_recipient', :project_id => @project} %></p>
</fieldset>
</div>

